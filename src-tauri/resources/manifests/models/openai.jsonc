{
  "$schema": "../../../../json_schema/model-schema.json",
  "id": "openai",
  "name": "OpenAI",
  "description": "Integration with OpenAI models like GPT-5",
  "website": "https://openai.com/",
  "type": "llm",
  "inference_type": ["chat"],
  "engine": "openai",
  "inference_fields": ["temperature", "verbosity", "top_p", "frequency_penalty", "presence_penalty", "reasoning", "stop"],
  "fields": [
    {
      "key": "api_key",
      "label": "API Key",
      "placeholder": "Your OpenAI API key",
      "required": true,
      "field_type": "secret"
    },
    {
      "key": "model",
      "label": "Model",
      "placeholder": "The OpenAI model to use",
      "required": true,
      "field_type": "string",
      "hints": ["gpt-5", "gpt-5-chat","gpt-5-mini","gpt-5-nano","gpt-4o", "gpt-4o-mini", "o3-mini", "o1-mini"],
      "request": {
        "label": "Get Models",
        "method": "GET",
        "url": "https://api.openai.com/v1/models",
        "headers": {
          "Authorization": "Bearer {api_key}"
        },
        "response": {
          "label": "id",
          "value": "id",
          "parse": {
            "data": {
              "type": "array",
              "items": {
                "type": "object",
                "id": "id"
              }
            }
          }
        }
      }
    },
    {
      "key": "base_url",
      "label": "Base URL",
      "placeholder": "The base URL of the OpenAI API",
      "required": true,
      "default": "https://api.openai.com/v1",
      "field_type": "url"
    }
  ]
}
